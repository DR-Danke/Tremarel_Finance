# Finance Tracker Backend Environment Variables
# Copy this file to .env and update with your values

# =============================================================================
# Database Connection (Supabase PostgreSQL)
# =============================================================================

# Direct connection string from Supabase dashboard
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# JWT Authentication
# =============================================================================

# Secret key for JWT signing (minimum 32 characters, use a secure random value)
JWT_SECRET_KEY=your-secure-secret-key-min-32-chars

# JWT Algorithm (HS256 recommended)
JWT_ALGORITHM=HS256

# Token expiration time in minutes (1440 = 24 hours)
JWT_EXPIRE_MINUTES=1440

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed origins for CORS (JSON array format)
# Development: ["http://localhost:5173"]
# Production: ["https://your-app.vercel.app"]
# Multiple origins: ["http://localhost:5173","https://your-app.vercel.app"]
CORS_ORIGINS=["http://localhost:5173"]

# =============================================================================
# Application Settings
# =============================================================================

# Application display name
APP_NAME=Finance Tracker API

# Application version
APP_VERSION=1.0.0

# Debug mode (set to false in production)
DEBUG=false

# =============================================================================
# Render Deployment (CRITICAL)
# =============================================================================

# Python version for Render deployment (must match project requirements)
PYTHON_VERSION=3.11.9
