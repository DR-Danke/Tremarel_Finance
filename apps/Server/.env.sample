# Finance Tracker Backend Environment Variables
# Copy this file to .env and update with your values

# Database Connection (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Authentication
JWT_SECRET_KEY=your-secure-secret-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Configuration (JSON array format)
CORS_ORIGINS=["http://localhost:5173"]

# Application Settings
APP_NAME=Finance Tracker API
APP_VERSION=1.0.0
DEBUG=false

# Python Version (CRITICAL for Render deployment)
PYTHON_VERSION=3.11.9
